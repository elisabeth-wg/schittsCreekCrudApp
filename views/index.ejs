<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>Schitt's Creek Quote App</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <h1 data-position="header">Play with Moira and David Quotes</h1>

    
    <section data-position="add-quote">
      <h2>Add quote</h2>

      <form action="/quotes" method="POST">
        <input type="text" placeholder="name" name="name" />
        <input type="text" placeholder="quote" name="quote" />
        <button type="submit">Submit</button>
      </form>
    </section>


    <section data-position="update-quote">
      <div>
        <h2>Moira overtakes David!</h2>
        <p>Replace first David quote with a quote written by Moira</p>
        <button id="update-button">Replace David's quote</button>
      </div>
    </section>

    
    <section data-position="delete-quote">
      <div>
        <h2>Remove Moira!</h2>
        <p>
            Delete one Darth Moira quote. Does nothing if there are no more Moira quotes
        </p>
        <button id="delete-button">Delete Moira's quote</button>
      </div>
      <div id="message"></div>
    </section>


    <section data-position="quotes">
      <h2>Quotes</h2>
    
      <ul class="quotes">
        <!-- Loop through quotes -->
        <% for(let i=0; i < quotes.length; i++) {%>
            <li class="quote">
                <!-- Output name from the iterated quote object -->
                <span>
                    <%= quotes[i].name %>
                </span>:
                <!-- Output quote from the iterated quote object -->
                <span>
                    <%= quotes[i].quote %>
                </span>
            </li>
            <% } %>
      </ul>
    </section>
    

    <script src="/main.js"></script>
  </body>
</html>